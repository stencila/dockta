{
  "name": "@stencila/dockta",
  "version": "0.14.4",
  "description": "A Docker image builder for researchers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dockta": "./dist/cli.js"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json --fix --format stylish ./src/**/*.ts",
    "test": "jest",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "cover": "jest --collectCoverage",
    "build": "npm run build-dist && npm run build-bins",
    "build-dist": "tsc && cp ./src/*.json dist",
    "build-bins": "pkg --out-path=build .",
    "bundle": "npm run bundle-linux && npm run bundle-macos && npm run bundle-win",
    "bundle-linux": "tar --transform 's|build/dockta-linux|dockta|' -czvf build/dockta-linux-x64.tar.gz build/dockta-linux",
    "bundle-macos": "tar --transform 's|build/dockta-macos|dockta|' -czvf build/dockta-macos-x64.tar.gz build/dockta-macos",
    "bundle-win": "./bundle-win.sh",
    "docs": "markdown-toc -i --maxdepth=4 README.md && typedoc --readme README.md --mode file --out ./docs ./src",
    "cli": "ts-node src/cli.ts",
    "server": "ts-node src/server.ts",
    "start": "node ./dist/server.js",
    "commit": "git-cz",
    "prepublishOnly": "npm run build && npm run bundle",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stencila/dockta.git"
  },
  "keywords": [
    "Docker",
    "Dockerfile",
    "JSON-LD",
    "research",
    "reproducibility"
  ],
  "author": "Dockta contributors (https://github.com/stencila/dockta/contributors)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/dockta/issues"
  },
  "homepage": "https://github.com/stencila/dockta#readme",
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.9",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@types/dockerode": "^2.5.12",
    "@types/express": "^4.16.1",
    "@types/got": "^9.4.0",
    "@types/jest": "^24.0.6",
    "@types/js-yaml": "^3.12.0",
    "@types/node-persist": "0.0.33",
    "@types/semver": "^6.0.0",
    "@types/tar-fs": "^1.16.1",
    "@types/tmp": "0.1.0",
    "@types/yargs": "^13.0.0",
    "all-contributors-cli": "^6.1.2",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^24.1.0",
    "markdown-toc": "^1.2.0",
    "pkg": "^4.3.7",
    "semantic-release": "^15.13.16",
    "semantic-release-cli": "^5.1.1",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@stencila/schema": "^0.2.4",
    "builtin-modules": "^3.0.0",
    "detective": "^5.1.0",
    "docker-file-parser": "^1.0.4",
    "dockerode": "^2.5.7",
    "express": "^4.16.3",
    "fast-glob": "^2.2.6",
    "got": "^9.2.2",
    "js-yaml": "^3.13.1",
    "ndjson": "^1.5.0",
    "node-persist": "^3.0.1",
    "rimraf": "^2.6.2",
    "semver": "^6.0.0",
    "tar-fs": "^1.16.3",
    "tmp": "0.1.0",
    "yargonaut": "^1.1.4",
    "yargs": "^13.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "pkg": {
    "scripts": "./dist/**/*.js",
    "assets": "./dist/**/*.json"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "build/dockta-linux-x64.tar.gz",
              "label": "dockta-linux-x64.tar.gz"
            },
            {
              "path": "build/dockta-macos-x64.tar.gz",
              "label": "dockta-macos-x64.tar.gz"
            },
            {
              "path": "build/dockta-win-x64.zip",
              "label": "dockta-win-x64.zip"
            }
          ]
        }
      ]
    ]
  }
}
