{
  "name": "@stencila/dockta",
  "version": "0.22.2",
  "description": "A Docker image builder for researchers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "src/install.R"
  ],
  "scripts": {
    "lint": "eslint --fix 'src/**/*.{js,ts}'",
    "format": "prettier --write '**/*.{js,json,md,ts,yaml}'",
    "test": "jest",
    "test:cover": "jest --collectCoverage",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "build": "tsc && cp ./src/*.json dist",
    "images": "cd images && ./compile.sh",
    "docs": "markdown-toc -i --maxdepth=4 README.md && typedoc --readme README.md --out ./docs ./src",
    "cli": "ts-node src/cli.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stencila/dockta.git"
  },
  "keywords": [
    "Docker",
    "Dockerfile",
    "JSON-LD",
    "research",
    "reproducibility"
  ],
  "author": "Dockta contributors (https://github.com/stencila/dockta/contributors)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/dockta/issues"
  },
  "homepage": "https://github.com/stencila/dockta#readme",
  "devDependencies": {
    "@semantic-release/exec": "5.0.0",
    "@stencila/dev-config": "2.0.2",
    "@types/dockerode": "3.2.2",
    "@types/got": "9.6.11",
    "@types/jest": "26.0.20",
    "@types/js-yaml": "4.0.0",
    "@types/node": "14.14.31",
    "@types/node-persist": "3.1.1",
    "@types/semver": "7.3.4",
    "@types/tar-fs": "2.0.0",
    "@types/tmp": "0.2.0",
    "@types/yargs": "16.0.0",
    "all-contributors-cli": "6.20.0",
    "jest": "26.6.3",
    "markdown-toc": "1.2.0",
    "ts-jest": "26.5.2",
    "ts-node": "9.1.1",
    "typedoc": "0.20.28",
    "typescript": "4.2.2"
  },
  "dependencies": {
    "@stencila/logga": "^4.0.0",
    "@stencila/schema": "^0.2.4",
    "builtin-modules": "^3.1.0",
    "detective": "^5.2.0",
    "docker-file-parser": "^1.0.5",
    "dockerode": "^3.2.1",
    "fast-glob": "^3.2.4",
    "got": "^11.8.1",
    "js-yaml": "^4.0.0",
    "ndjson": "^2.0.0",
    "node-persist": "^3.1.0",
    "semver": "^7.3.4",
    "tar-fs": "^2.1.1",
    "tmp": "0.2.1",
    "yargonaut": "^1.1.4",
    "yargs": "^16.2.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config",
    "rules": {
      "@typescript-eslint/ban-types": "warn",
      "@typescript-eslint/no-unsafe-assignment": "warn",
      "@typescript-eslint/no-unsafe-call": "warn",
      "@typescript-eslint/no-unsafe-member-access": "warn",
      "@typescript-eslint/no-unsafe-return": "warn",
      "@typescript-eslint/prefer-regexp-exec": "warn",
      "@typescript-eslint/require-await": "warn",
      "@typescript-eslint/restrict-plus-operands": "warn",
      "@typescript-eslint/restrict-template-expressions": "warn",
      "@typescript-eslint/strict-boolean-expressions": "warn",
      "@typescript-eslint/unbound-method": "warn"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "coveragePathIgnorePatterns": [
      "tests/MockUrlFetcher.ts",
      "tests/test-functions.ts"
    ]
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "renovate": {
    "extends": [
      "@stencila"
    ]
  },
  "release": {
    "extends": "@stencila/semantic-release-config",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "./release.sh ${nextRelease.version}"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md",
            "images/*/{.Dockerfile,DESCRIPTION,requirements.txt}"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  }
}
