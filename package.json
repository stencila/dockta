{
  "name": "@stencila/dockter",
  "version": "0.2.1",
  "description": "A Docker image builder for researchers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dockter": "./dist/cli.js"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json --fix --format stylish ./src/**/*.ts",
    "test": "jest",
    "cover": "jest --collectCoverage",
    "build": "npm run build-dist && npm run build-bins",
    "build-dist": "tsc",
    "build-bins": "pkg --out-path=build .",
    "docs": "markdown-toc -i --maxdepth=4 README.md && typedoc --readme README.md --out ./docs ./src",
    "cli": "ts-node src/cli.ts",
    "server": "ts-node src/server.ts",
    "start": "node ./dist/server.js",
    "commit": "git-cz",
    "prepublishOnly": "npm run build-dist",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stencila/dockter.git"
  },
  "keywords": [
    "Docker",
    "Dockerfile",
    "JSON-LD",
    "reproducibility",
    "reasearch"
  ],
  "author": "Contributors (https://github.com/stencila/dockter/contributors)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/dockter/issues"
  },
  "homepage": "https://github.com/stencila/dockter#readme",
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.5",
    "@semantic-release/github": "^5.2.0",
    "@semantic-release/npm": "^5.0.5",
    "@semantic-release/release-notes-generator": "^7.1.1",
    "@types/dockerode": "^2.5.5",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.3",
    "@types/js-yaml": "^3.11.2",
    "@types/request": "^2.47.1",
    "@types/tar-fs": "^1.16.1",
    "@types/tar-stream": "^1.6.0",
    "@types/tmp": "0.0.33",
    "@types/yargs": "^12.0.1",
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.6.0",
    "markdown-toc": "^1.2.0",
    "pkg": "^4.3.4",
    "semantic-release": "^15.10.5",
    "semantic-release-cli": "^4.0.9",
    "ts-jest": "^23.10.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "cached-request": "^1.1.4",
    "docker-file-parser": "^1.0.4",
    "dockerode": "^2.5.7",
    "express": "^4.16.3",
    "fast-glob": "^2.2.3",
    "js-yaml": "^3.12.0",
    "request": "^2.88.0",
    "tar-fs": "^1.16.3",
    "tar-stream": "^1.6.2",
    "tmp": "0.0.33",
    "yargonaut": "^1.1.4",
    "yargs": "^12.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "build/dockter-linux-x64.tar.gz",
              "label": "Linux CLI binary"
            },
            {
              "path": "build/dockter-macos-x64.tar.gz",
              "label": "MacOS CLI binary"
            },
            {
              "path": "build/dockter-win-x64.zip",
              "label": "Windows CLI binary"
            }
          ]
        }
      ]
    ]
  }
}
