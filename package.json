{
  "name": "@stencila/dockta",
  "version": "0.16.1",
  "description": "A Docker image builder for researchers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.js",
  "scripts": {
    "lint": "eslint --fix 'src/**/*.{js,ts}'",
    "format": "prettier --write '**/*.{js,json,md,ts,yaml}'",
    "test": "jest",
    "test:cover": "jest --collectCoverage",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "build": "tsc && cp ./src/*.json dist",
    "docs": "markdown-toc -i --maxdepth=4 README.md && typedoc --readme README.md --mode file --out ./docs ./src",
    "cli": "ts-node src/cli.ts",
    "server": "ts-node src/server.ts",
    "start": "node dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stencila/dockta.git"
  },
  "keywords": [
    "Docker",
    "Dockerfile",
    "JSON-LD",
    "research",
    "reproducibility"
  ],
  "author": "Dockta contributors (https://github.com/stencila/dockta/contributors)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/dockta/issues"
  },
  "homepage": "https://github.com/stencila/dockta#readme",
  "devDependencies": {
    "@stencila/dev-config": "^1.2.3",
    "@types/dockerode": "^2.5.12",
    "@types/express": "^4.16.1",
    "@types/got": "^9.4.0",
    "@types/jest": "^24.0.6",
    "@types/js-yaml": "^3.12.0",
    "@types/node-persist": "0.0.33",
    "@types/semver": "^6.0.0",
    "@types/tar-fs": "^1.16.1",
    "@types/tmp": "0.1.0",
    "@types/yargs": "^13.0.0",
    "all-contributors-cli": "^6.1.2",
    "jest": "^24.1.0",
    "markdown-toc": "^1.2.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "typedoc": "^0.15.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@stencila/logga": "^1.1.0",
    "@stencila/schema": "^0.2.4",
    "builtin-modules": "^3.0.0",
    "detective": "^5.1.0",
    "docker-file-parser": "^1.0.4",
    "dockerode": "^2.5.7",
    "express": "^4.16.3",
    "fast-glob": "^2.2.6",
    "got": "^9.2.2",
    "js-yaml": "^3.13.1",
    "ndjson": "^1.5.0",
    "node-persist": "^3.0.1",
    "rimraf": "^2.6.2",
    "semver": "^6.0.0",
    "tar-fs": "^1.16.3",
    "tmp": "0.1.0",
    "yargonaut": "^1.1.4",
    "yargs": "^13.1.0"
  },
  "release": {
    "extends": "@stencila/semantic-release-config"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.ts"],
    "coveragePathIgnorePatterns": [
      "tests/MockUrlFetcher.ts",
      "tests/test-functions.ts"
    ]
  },
  "prettier": "@stencila/dev-config/prettier-config.json"
}
